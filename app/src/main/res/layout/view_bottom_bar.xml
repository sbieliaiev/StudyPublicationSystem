<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimaryDark"
    android:padding="@dimen/dimen_5"

    >

    <LinearLayout
        android:id="@+id/item_1"
        android:layout_width="@dimen/dimen_0"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.artlite.bslibrary.ui.view.BSImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_home_tab"
            android:tint="@android:color/white"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="2"

            />

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_home"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"
            />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/item_2"
        android:layout_width="@dimen/dimen_0"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.artlite.bslibrary.ui.view.BSImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/round_drafts_black_48dp"
            android:layout_height="@dimen/dimen_0"
            android:tint="@android:color/white"
            android:layout_weight="2"

            />

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_draft"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"
            />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/item_3"
        android:layout_width="@dimen/dimen_0"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.artlite.bslibrary.ui.view.BSImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/round_favorite_black_48dp"
            android:layout_height="@dimen/dimen_0"
            android:tint="@android:color/white"
            android:layout_weight="2"

            />

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_favourites"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"
            />
        </LinearLayout>

     <LinearLayout
         android:id="@+id/item_4"
         android:layout_width="@dimen/dimen_0"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.artlite.bslibrary.ui.view.BSImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/round_settings_black_48dp"
            android:tint="@android:color/white"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="2"

            />

        <com.artlite.bslibrary.ui.fonted.BSTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_settings"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"
            />
        </LinearLayout>

</LinearLayout>